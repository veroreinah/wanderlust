<div class="container">
  <div class="row">
    <div class="col">
      <h1>My trips 🏖</h1>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col">
      {{#if trips}}
      <a class="btn btn-wanderlust mt-3" href="/trips/create">
        <span>Add new trip</span>
      </a>
      {{else}}
      <div class="jumbotron">
        <h2>You have not added any trip yet.</h2>
        <p class="lead">Start planning your next trip...</p>
        <a class="btn btn-wanderlust" href="/trips/create">
          <span>Add new trip</span>
        </a>
      </div>
      {{/if}}
    </div>
  </div>
  {{#if trips}}
  <div class="row trips-list mt-3">
    {{#each trips}}
    <div class="col-12 col-md-6 col-lg-4">
      <a href="/trips/{{_id}}" class="item">
        <div>
          <img class="img-fluid" src="{{tripPicName}}" alt="{{name}}">
          <div class="data">
          <h4>{{name}}</h4>
          <small>{{date_start}} - {{date_end}}</small>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>