<div class="container">
  <div class="row">
    <div class="col">
      <h1>Edit trip 🏔</h1>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col">
      {{#if message}}
        <div class="alert alert-danger" role="alert">
          {{ message }}
        </div>
      {{/if}}
      {{#if successMessage}}
        <div class="alert alert-success" role="alert">
          {{ successMessage }}
        </div>
      {{/if}}
      <form id="createTripForm" action="/trips/{{trip._id}}/edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" class="form-control" value="{{trip.name}}" required>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description" id="description" class="form-control">{{trip.description}}</textarea>
        </div>
        <div class="form-group">
          <label for="dates">Dates</label>
          <input type="text" name="dates" id="dates" class="form-control" value="{{trip.dateRange}}" required>
        </div>
        <div class="form-group">
          <label for="destination">Destination</label>
          <select data-placeholder="- Select destination -" name="destination" id="destination" class="form-control" multiple required>
            <option value=""></option>
            {{#each countries}}
            <option value="{{sygicId}}-{{name}}">{{name}}</option>
            {{/each}}
            {{#each cities}}
            <option value="{{sygicId}}-{{name}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="picture">Picture</label>
          <input type="file" class="form-control-file" name="picture" id="picture">
        </div>
        <button class="btn btn-wanderlust" type="submit">
          <span>Update</span>
        </button>
      </form>
    </div>
  </div>
</div>
<script>
  window.destinations = {{{destinations}}};
</script>